<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.evox.agent.sam</string>

    <key>ProgramArguments</key>
    <array>
        <string>/Users/sonpiaz/.openclaw/workspace/evox/scripts/agent-supervisor.sh</string>
        <string>SAM</string>
    </array>

    <key>WorkingDirectory</key>
    <string>/Users/sonpiaz/.openclaw/workspace/evox</string>

